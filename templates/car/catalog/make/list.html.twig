{% extends 'base.html.twig' %}

{% block title %}
    {{ 'List of makes'|trans }}
{% endblock %}

{% block body %}
    <h2 class="ml-5 mt-3 text-secondary">
        {{ 'Available makes'|trans }}
        ({{ makes|length }})
    </h2>
    <div class=" d-flex row top">
        {% if makes %}
            {% for make in makes %}
                <div class="row ">
                    <a class="col-4 ml-5  mr-4 mb-3 link"
                       href="{{ path('models_list', {'make': make.id}) }}">
                        <img class="make-icon"
                             src="{{ asset('images/makes/'~make.icon)}}" alt="">
                    </a>
                </div>
            {% endfor %}
        {% endif %}
    </div>
{% endblock %}
